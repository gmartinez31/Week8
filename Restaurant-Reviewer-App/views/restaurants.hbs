<div class='containter-fluid'>
    <div class='row'>
        <div class='col'>
            <h1><strong>{{restaurant.restaurant_name}}</strong></h1>
            <p>Address: {{restaurant.address}}</p>
            <p>Category: {{restaurant.catergory}}</p>
            {{#if reviews}}
                <h2>Reviews</h2>
                {{#each reviews}}
                    <h3>{{title}}</h3>
                    <p>Author: {{reviewer_name}}</p>
                    <p>Stars: {{stars}}</p>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>